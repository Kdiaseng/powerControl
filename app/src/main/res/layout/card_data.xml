<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView style="@style/CardItemData">

        <LinearLayout style="@style/LinearItemData">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/read_current"
                android:textColor="@color/colorGreenAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="@string/valor"
                android:textColor="@color/colorGreenAccent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/CardItemData"
        app:cardCornerRadius="5dp">

        <LinearLayout style="@style/LinearItemData">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/read_last"
                android:textColor="@color/colorGreenAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="@string/valor"
                android:textColor="@color/colorGreenAccent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView style="@style/CardItemData">

        <LinearLayout style="@style/LinearItemData">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/measured_consumption"
                android:textColor="@color/colorGreenAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="@string/valor"
                android:textColor="@color/colorGreenAccent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView style="@style/CardItemData">

        <LinearLayout style="@style/LinearItemData">

            <TextView
                android:textColor="@color/colorGreenAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/billed_consumption" />

            <TextView
                android:textColor="@color/colorGreenAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="@string/valor" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/CardItemData"
      >

        <LinearLayout style="@style/LinearItemData">

            <TextView
                android:textColor="@color/colorGreenAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/rate" />

            <TextView
                android:textColor="@color/colorGreenAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="@string/valor" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/CardItemData"
        >

        <LinearLayout style="@style/LinearItemData">

            <TextView
                android:textColor="@color/colorGreenAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/street_lighting" />

            <TextView
                android:textColor="@color/colorGreenAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="@string/valor" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>