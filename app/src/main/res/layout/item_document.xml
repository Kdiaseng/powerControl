<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
       android:id="@+id/materialCard_item_docs"
        app:cardBackgroundColor="@color/palette1BlackLight"
        android:layout_width="80dp"
        app:cardCornerRadius="5dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorGreenAccent"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/iconpdf" />

            <TextView
                android:id="@+id/textView_document_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/archivo_black"
                android:text="@string/year"
                android:textColor="@color/colorGreenAccent"
                android:textSize="18sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>